{
  "root": true,
  "extends": [
    "airbnb-base"
  ],
  "plugins": [
    "prettier",
    "import"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "no-console": "error",
    "comma-dangle": "error",
    "import/no-extraneous-dependencies": "off",
    "class-methods-use-this": "off",
    "max-len": [
      "error",
      {
        "code": 150,
        "ignoreComments": true
      }
    ]
  }
}
